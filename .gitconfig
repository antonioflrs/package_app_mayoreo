[alias]
    # Alias para workflow automatizado
    wf = !./scripts/git_workflow.sh
    wf-status = !./scripts/git_workflow.sh -s
    wf-auto = !./scripts/git_workflow.sh -a
    wf-commit = !./scripts/git_workflow.sh -c
    wf-merge = !./scripts/git_workflow.sh -m
    wf-push = !./scripts/git_workflow.sh -p
    
    # Alias para operaciones comunes
    st = status
    co = checkout
    br = branch
    ci = commit
    ca = commit -a
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    
    # Alias para informaci√≥n
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --oneline --graph --decorate --all
    
    # Alias para seguridad
    safe-push = push --force-with-lease
    undo = reset --soft HEAD~1
    redo = commit -c ORIG_HEAD
    
    # Alias para limpieza
    cleanup = !git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d
    prune-remote = !git remote prune origin
    
[core]
    editor = code --wait
    autocrlf = input
    safecrlf = warn
    
[push]
    default = current
    followTags = true
    
[pull]
    rebase = false
    
[merge]
    ff = false
    
[rebase]
    autoStash = true
    
[init]
    defaultBranch = main
    
[color]
    ui = auto
    
[color "branch"]
    current = yellow
    local = green
    remote = red
    
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    
[color "status"]
    added = green
    changed = yellow
    untracked = red
